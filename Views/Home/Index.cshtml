<style>
    .banner-img {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
    }

    .top-search {
        background-color: #3e2723;
        padding: 20px 0;
        margin-bottom: 20px;
        border-bottom: 2px solid #ffa500;
    }

    .top-search .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .search-box {
        display: flex;
        align-items: center;
        border: 2px solid #ffd700;
        border-radius: 30px;
        padding: 5px 15px;
        background-color: #4b2e2e;
        max-width: 600px;
        width: 100%;
    }

    .search-icon {
        color: #ffd700;
        font-size: 18px;
        margin-right: 10px;
    }

    .search-input {
        border: none;
        outline: none;
        width: 100%;
        font-size: 16px;
        background-color: transparent;
        color: #e0e0e0;
        padding: 5px 0;
    }

    .search-input::placeholder {
        color: #ffd700;
        opacity: 0.8;
    }

    .close-search {
        color: #ffd700;
        font-size: 18px;
        margin-left: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

    .close-search:hover {
        color: #ffa500;
    }

    @@media (max-width: 768px) {
        .search-box {
            max-width: 90%;
        }

        .search-icon,
        .close-search {
            font-size: 16px;
        }

        .search-input {
            font-size: 14px;
        }
    }


    .carousel-caption {
        color: #f5f5f5;
        background: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
    }

    .carousel-caption h5 {
        font-size: 2rem;
        font-weight: bold;
        color: #ffd700;
    }

    .carousel-caption p {
        font-size: 1.2rem;
        color: #ffa500;
    }

    .btn-custom {
        background-color: #4b2e2e;
        color: #ffd700;
        border: 1px solid #ffd700;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-transform: uppercase;
    }

    .btn-custom:hover {
        background-color: #ffa500;
        color: #ffffff;
    }

    .custom-btn {
        display: inline-block;
        background-color: #4b2e2e;
        color: #ffd700;
        border: 2px solid #ffd700;
        text-transform: uppercase;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        text-align: center;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

    .custom-btn:hover {
        background-color: #ffa500;
        color: #fff;
        border-color: #ffa500;
        transform: scale(1.1);
    }

    .shop-cat-box img {
        margin-bottom: 15px;
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 5px;
    }

    .categories-shop {
        margin-top: 30px;
        margin-bottom: 50px;
    }

    @@media (max-width: 768px) {
        .shop-cat-box img {
            height: 200px;
        }
    }

    @@media (max-width: 480px) {
        .shop-cat-box img {
            height: 150px;
        }
    }

    .mt-4 {
        margin-top: 50px !important;
    }

    body {
        background-color: #2c2c2c;
        color: #e0e0e0;
    }

    .navbar {
        background-color: #4b2e2e;
    }

    .navbar a {
        color: #ffd700 !important;
    }

    .navbar a:hover {
        color: #ffa500 !important;
    }

    .footer-main {
        background-color: #4b2e2e;
        color: #ffd700;
        padding: 20px 0;
    }

    .footer-main h3 {
        color: #ffa500;
        font-size: 1.5rem;
    }

    .footer-main a {
        color: #ffd700;
    }

    .footer-main a:hover {
        color: #ffa500;
    }

    .footer-copyright {
        background-color: #2c2c2c;
        color: #e0e0e0;
        text-align: center;
        padding: 10px 0;
    }

    .booking-section {
        background-color: #3e2723;
        color: #f5f5f5;
        padding: 50px 0;
        border-radius: 10px;
    }

    .booking-section h1 {
        color: #ffd700;
    }

    .booking-section .form-control {
        border: 1px solid #ffd700;
    }

    .booking-section .form-control:focus {
        border-color: #ffa500;
        box-shadow: 0 0 5px #ffa500;
    }

    .booking-section .btn {
        background-color: #ffa500;
        color: #fff;
    }

    .booking-section .btn:hover {
        background-color: #ffd700;
    }

    .products-box {
        background-color: #2c2c2c;
        padding: 50px 0;
    }

    .products-box h1,
    .products-box p {
        color: #ffd700;
    }

    .products-box .products-single h4 {
        color: #ffa500;
    }

    .products-box .products-single h5 {
        color: #ffd700;
    }

    .latest-blog {
        background-color: #3e2723;
        padding: 50px 0;
        color: #f5f5f5;
    }

    .latest-blog h1 {
        color: #ffd700;
    }

    .latest-blog p {
        color: #ffa500;
    }
</style>
