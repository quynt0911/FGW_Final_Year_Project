@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle - Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            background-color: #f2f4f8;
        }

        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding-top: 20px;
            flex-shrink: 0;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar h4 {
            text-align: center;
            margin-bottom: 20px;
            color: #ecf0f1;
        }

        .sidebar a {
            color: #bdc3c7;
            padding: 15px 20px;
            display: block;
            text-decoration: none;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background-color: #34495e;
        }

        .content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 20px;
            background-color: #ecf0f1;
        }

        .table-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #34495e;
            color: #ecf0f1;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #ecf0f1;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #2980b9;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #1c5980;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #c0392b;
            transition: background 0.3s;
        }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #96281b;
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #2c3e50;
            color: #ecf0f1;
            position: fixed;
            bottom: 0;
            width: calc(100% - 250px);
            margin-left: 250px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h4>Dashboard</h4>
        <a href="/Account/Index">Quản lý tài khoản</a>
        <a href="/Menu/Index">Quản lý menu</a>
        <a href="/Order/Index">Quản lý đơn hàng</a>
        <a href="/Product/Index">Quản lý sản phẩm</a>
        <a href="/Home/Logout">Đăng xuất</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        &copy; 2024 Your Company
    </footer>
</body>

</html>
