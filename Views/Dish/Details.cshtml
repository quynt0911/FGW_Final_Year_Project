@model Blank.Models.Dish
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<h2>Dish Details</h2>

<dl class="row">
    <dt class="col-sm-3">Image</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <img src="@Model.PhotoUrl" alt="@Model.DishName" style="width: 150px; height: auto; border-radius: 8px;" />
        }
        else
        {
            <span>No Image</span>
        }
    </dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DishName)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.DishName)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DDescription)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.DDescription)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
</dl>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
