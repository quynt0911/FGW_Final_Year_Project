@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<h1 class="text-center">User Management</h1>

<div class="form-container">
    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">Create New User</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
        <div class="text-center">
        <a asp-action="ManageRole" class="btn btn-secondary">Assign Role</a>
    </div>
</div>

<style>
    /* Tiêu đề chính */
    h1.text-center {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #212529; /* Màu đen */
        font-weight: bold;
    }

    /* Container */
    .form-container {
        background-color: #ffffff; /* Nền trắng */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
        max-width: 1000px;
        margin: 30px auto; /* Canh giữa */
    }

    /* Table */
    .table {
        margin-top: 20px;
        width: 100%; /* Đầy đủ chiều ngang */
        border-collapse: collapse;
    }

    .table th {
        color: #ffffff; /* Màu chữ trắng */
        background-color: #343a40; /* Màu nền đen xám */
        text-align: center;
        padding: 10px;
    }

    .table td {
        text-align: center;
        color: #212529; /* Màu chữ đen */
        padding: 10px;
        border-bottom: 1px solid #dee2e6; /* Đường viền dưới */
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa; /* Màu nền xám nhạt cho dòng lẻ */
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #ffffff; /* Màu nền trắng cho dòng chẵn */
    }

    /* Button */
    .btn {
        padding: 8px 15px;
        font-size: 0.9rem;
        border-radius: 5px;
        text-transform: uppercase;
        font-weight: bold;
        transition: background-color 0.3s ease, color 0.3s ease; /* Hiệu ứng hover */
    }

    .btn-primary {
        background-color: #007bff; /* Màu xanh lam */
        color: #ffffff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-warning {
        background-color: #ffc107; /* Màu vàng */
        color: #212529; /* Màu chữ đen */
        border: none;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-info {
        background-color: #17a2b8; /* Màu xanh nước biển */
        color: #ffffff;
        border: none;
    }

    .btn-info:hover {
        background-color: #117a8b;
    }

    .btn-danger {
        background-color: #dc3545; /* Màu đỏ */
        color: #ffffff;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d; /* Màu xám */
        color: #ffffff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Canh giữa cho nút Assign Role */
    .text-center {
        text-align: center;
        margin-top: 20px;
    }

    /* Thẻ <hr> */
    hr {
        border: 1px solid #dee2e6;
        margin: 20px 0;
    }
</style>
