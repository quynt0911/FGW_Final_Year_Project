@model Blank.Models.Reservation
@{
    ViewData["Title"] = "Edit Reservation";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<h2 class="text-center my-4">Edit Your Reservation</h2>

<form asp-action="EditReservation" method="post" class="mt-4">
    <input type="hidden" asp-for="ReserId" />
    <!-- Table Information -->
    <div class="mb-3">
        <label for="selectedTableField" class="form-label">Selected Table</label>
        <input type="text" id="selectedTableField" class="form-control" value="@ViewBag.TableName" disabled />
        <input type="hidden" name="TableId" value="@Model.TableId" />
    </div>

    <!-- Customer Name -->
    <div class="mb-3">
        <label for="CustomerName" class="form-label">Customer Name</label>
        <input type="text" class="form-control" value="@Model.CustomerName" disabled />
        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    </div>

    <!-- Restaurant -->
    <div class="mb-3">
        <label for="RestaurantId" class="form-label">Restaurant</label>
        <input type="text" class="form-control" value="@ViewBag.RestaurantName" disabled />
        <input type="hidden" name="RestaurantId" value="@Model.RestaurantId" />
    </div>

    <!-- Status -->
    <div class="mb-3">
        <label for="RStatus" class="form-label">Status</label>
        <input type="text" class="form-control" value="@Model.RStatus" disabled />
    </div>

    <!-- Date and Time -->
    <div class="form-group mb-3">
        <label asp-for="DateTime" class="form-label">New Date and Time</label>
        <input asp-for="DateTime" type="datetime-local" class="form-control" required />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>

    <!-- Special Request -->
    <div class="form-group mb-3">
        <label asp-for="Request" class="form-label">Special Request</label>
        <textarea asp-for="Request" class="form-control" placeholder="Enter any additional requests..."></textarea>
        <span asp-validation-for="Request" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        <a asp-action="History" class="btn btn-secondary px-4">Cancel</a>
    </div>
</form>
