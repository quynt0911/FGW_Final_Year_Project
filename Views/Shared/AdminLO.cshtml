@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<div class="hell">
    <div class="sidebar">
        <h4>Dashboard</h4>

        <div class="dropdown">
            <a asp-controller="Home" asp-action="Dash">Home</a>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-restaurant" class="toggle-checkbox">
            <label for="toggle-restaurant" class="dropdown-toggle">Manage Restaurant</label>
            <div class="dropdown-content">
                <a href="/Restaurant/Index">Branches of Restaurant</a>
                <a href="/Restaurant/Create">Add New Branch</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-account" class="toggle-checkbox">
            <label for="toggle-account" class="dropdown-toggle">Manage Account</label>
            <div class="dropdown-content">
                <a href="/User/Index">List of Accounts</a>
                <a href="/User/ManageRole">Manage Role</a>
                <a href="/User/Create">Add New Account</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-table" class="toggle-checkbox">
            <label for="toggle-table" class="dropdown-toggle">Manage Tables</label>
            <div class="dropdown-content">
                <a asp-controller="Table" asp-action="ViewT">Table Diagram</a>
                <a asp-controller="Table" asp-action="Index">List of Tables</a>
                <a asp-controller="Table" asp-action="Create">Add New Table</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-ingredient" class="toggle-checkbox">
            <label for="toggle-ingredient" class="dropdown-toggle">Manage Ingredients</label>
            <div class="dropdown-content">
                <a asp-controller="Ingredient" asp-action="Index">View Ingredient</a>
                <a asp-controller="Ingredient" asp-action="Create">Add New Ingredient</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-task" class="toggle-checkbox">
            <label for="toggle-task" class="dropdown-toggle">Manage Tasks</label>
            <div class="dropdown-content">
                <a asp-controller="Task" asp-action="Index">View Tasks</a>
            </div>
        </div>

        <div class="dropdown">
        <input type="checkbox" id="toggle-dish" class="toggle-checkbox">
        <label for="toggle-dish" class="dropdown-toggle">Manage Dishes</label>
        <div class="dropdown-content">
        <a asp-controller="Dish" asp-action="Index">List of Dishes</a>
        <a asp-controller="Dish" asp-action="Create">Add New Dish</a>
        </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-order" class="toggle-checkbox">
            <label for="toggle-order" class="dropdown-toggle">Manage Orders</label>
            <div class="dropdown-content">
                <a asp-controller="Order" asp-action="Index">List of Orders</a>
                <a asp-controller="Order" asp-action="Create">Create New Order</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-recipe" class="toggle-checkbox">
            <label for="toggle-recipe" class="dropdown-toggle">Manage Recipes</label>
            <div class="dropdown-content">
                <a asp-controller="Recipe" asp-action="Index">View Recipes</a>
                <a asp-controller="Recipe" asp-action="Create">Add New Recipe</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-report" class="toggle-checkbox">
            <label for="toggle-report" class="dropdown-toggle">Reports</label>
            <div class="dropdown-content">
                <a asp-controller="Report" asp-action="Index">View Reports</a>
                <a asp-controller="Report" asp-action="Create">Make a Report</a>
                <a asp-controller="Report" asp-action="Statistic">Statistics</a>
            </div>
        </div>


        <a href="/Home/Logout">Logout</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    <footer>
        &copy; 2024 Your Company
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</div>
<style>
    /*------------------------------------------------------------------
    GLOBAL STYLES
-------------------------------------------------------------------*/
    body {
        color: #e0e0e0;
        font-size: 15px;
        font-family: 'Dosis', sans-serif;
        background-color: #2c2c2c;
        /* Dark background */
        margin: 0;
        padding: 0;
    }

    a {
        color: #ffd700;
        text-decoration: none !important;
        transition: all 0.3s ease-in-out;
    }

    a:hover {
        color: #ffa500;
    }

    /*------------------------------------------------------------------
    SIDEBAR STYLES
-------------------------------------------------------------------*/
    .sidebar {
        width: 250px;
        background-color: #3e2723;
        /* Match user layout colors */
        color: #ffd700;
        padding-top: 20px;
        flex-shrink: 0;
        position: fixed;
        height: 100%;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3);
    }

    .sidebar h4 {
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #ffd700;
    }

    .sidebar a,
    .sidebar .dropdown-toggle {
        color: #ffd700;
        padding: 12px 15px;
        background-color: transparent;
        display: block;
        text-decoration: none;
        text-align: left;
        border-radius: 4px;
        margin: 5px auto;
        font-size: 16px;
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar a:hover,
    .sidebar .dropdown-toggle:hover {
        background-color: #5d3b1d;
        color: #ffa500;
    }

    .sidebar .dropdown-toggle {
        cursor: pointer;
        font-weight: bold;
    }

    .sidebar .dropdown-content {
        display: none;
        background-color: #4b2e2e;
        padding: 5px 0;
        border-radius: 4px;
    }

    .sidebar .dropdown-content a {
        padding: 8px 12px;
        color: #ffd700;
        transition: background-color 0.3s;
        text-align: left;
    }

    .sidebar .dropdown-content a:hover {
        background-color: #a67b4f;
        color: #ffffff;
    }

    .toggle-checkbox {
        display: none;
    }

    .toggle-checkbox:checked+.dropdown-toggle+.dropdown-content {
        display: block;
    }

    /*------------------------------------------------------------------
    CONTENT AREA STYLES
-------------------------------------------------------------------*/
    .content {
        margin-left: 250px;
        flex-grow: 1;
        padding: 20px;
        background-color: #f8f9fa;
        /* Light gray background for contrast */
    }

    .content h1,
    .content h2 {
        color: #3e2723;
        font-weight: bold;
    }

    /*------------------------------------------------------------------
    TABLE STYLES
-------------------------------------------------------------------*/
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table th {
        background-color: #3e2723;
        color: #ffd700;
        text-align: center;
        font-weight: bold;
        padding: 10px;
    }

    .table td {
        color: #333333;
        text-align: center;
        padding: 10px;
        border: 1px solid #ddd;
    }

    .table .btn {
        background-color: #3e2723;
        color: #ffd700;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .table .btn:hover {
        background-color: #5d3b1d;
        color: #ffa500;
    }

    /*------------------------------------------------------------------
    BUTTON STYLES
-------------------------------------------------------------------*/
    .btn-primary {
        background: linear-gradient(90deg, rgba(58, 123, 213, 1) 0%, rgba(58, 213, 176, 1) 100%);
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background 0.3s;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: linear-gradient(90deg, rgba(58, 213, 176, 1) 0%, rgba(58, 123, 213, 1) 100%);
    }

    .btn-secondary {
        background: #5d3b1d;
        color: #ffd700;
        border: 1px solid #3e2723;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: bold;
        transition: background 0.3s, color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #a67b4f;
        color: #ffffff;
    }

    /*------------------------------------------------------------------
    FOOTER STYLES
-------------------------------------------------------------------*/
    footer {
        text-align: center;
        padding: 10px;
        background-color: #3e2723;
        color: #ffd700;
        font-size: 14px;
        position: fixed;
        bottom: 0;
        width: calc(100% - 250px);
        margin-left: 250px;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.3);
    }

    /*------------------------------------------------------------------
    RESPONSIVE STYLES
-------------------------------------------------------------------*/
    @@media (max-width: 768px) {
        .sidebar {
            width: 200px;
        }

        .content {
            margin-left: 200px;
        }

        .sidebar a,
        .sidebar .dropdown-toggle {
            font-size: 14px;
        }

        footer {
            width: calc(100% - 200px);
            margin-left: 200px;
        }
    }
</style>