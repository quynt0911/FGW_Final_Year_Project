@{
    ViewData["Title"] = "Restaurant Booking Home";
    Layout = "~/Views/Shared/UserLO.cshtml";
}
@model IEnumerable<Table>

<body>
    <div class="top-search">
        <div class="container">
            <div class="input-group search-box">
                <span class="input-group-addon search-icon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control search-input" placeholder="Search...">
                <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
            </div>
        </div>
    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/banner-05.jpg" class="d-block w-100 banner-img" alt="First Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to Restaurant Booking</h5>
                    <p>Reserve your table or enjoy delicious food delivered to your home!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-02.jpg" class="d-block w-100 banner-img" alt="Second Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Experience the Best Dining in Town</h5>
                    <p>Our chefs prepare each dish with love and care.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-03.jpg" class="d-block w-100 banner-img" alt="Third Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Discover New Tastes</h5>
                    <p>Book your table today and explore our seasonal menus.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-04.jpg" class="d-block w-100 banner-img" alt="Fourth Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Discover New Tastes</h5>
                    <p>Book your table today and explore our seasonal menus.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="categories-shop">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/book_table.jpg" alt="Book Table" />
                        <a class="custom-btn" href="#book-table">Book a Table</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/order_food.jpg" alt="Order Food" />
                        <a class="custom-btn" href="#order-food">Order Food</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/popular_dishes.jpg" alt="Popular Dishes" />
                        <a class="custom-btn" href="#popular-dishes">Popular Dishes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="book-table" class="booking-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>Diagram and current table status of the restaurant</h1>
                    <div style="color: black; margin: 20px auto; text-align: center; padding: 10px; border: 1px solid #ccc; border-radius: 5px; 
            background-color: #f9f9f9; width: 60%; box-shadow: 0px 0px 10px rgba(0,0,0,0.1);">
                        <p><strong>Table Status Information:</strong></p>
                        <p>
                            <span
                                style="display: inline-block; width: 15px; height: 15px; background-color: lightgreen; margin-right: 5px; border: 1px solid #000;"></span>
                            Available |
                            <span
                                style="display: inline-block; width: 15px; height: 15px; background-color: lightcoral; margin-right: 5px; border: 1px solid #000;"></span>
                            Reserved |
                            <span
                                style="display: inline-block; width: 15px; height: 15px; background-color: lightblue; margin-right: 5px; border: 1px solid #000;"></span>
                            In Service |
                            <span
                                style="display: inline-block; width: 15px; height: 15px; background-color: lightyellow; margin-right: 5px; border: 1px solid #000;"></span>
                            Pending Cleanup |
                            <span
                                style="display: inline-block; width: 15px; height: 15px; background-color: lightgray; margin-right: 5px; border: 1px solid #000;"></span>
                            Maintenance
                        </p>
                    </div>

                    <div id="dropArea" style="position: relative; width: 100%; height: 500px; border: 1px solid black; 
            background-image: url('/images/banner-01.jpg'); background-size: cover; 
            background-position: center; overflow: hidden; margin-top: 20px;">

                        @foreach (var table in Model)
                        {
                            <div class="table-box" style="position: absolute; top: @(table.Location?.Split(',')[0] ?? "0")px; 
                    left: @(table.Location?.Split(',')[1] ?? "0")px; 
                    width: 50px; height: 50px; text-align: center; 
                    line-height: 50px; border-radius: 5px; 
                    background-color: @(table.TStatus == "Available" ? "lightgreen" :
                                        table.TStatus == "Reserved" ? "lightcoral" :
                                        table.TStatus == "In Service" ? "lightblue" :
                                        table.TStatus == "Pending Cleanup" ? "lightyellow" : "lightgray");">
                                @table.TName
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="shop-cat-box">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <a class="custom-btn" asp-controller="Reservation" asp-action="MakeReservation">Book Now</a>
                    }
                    else
                    {
                        <a class="custom-btn" href="/Identity/Account/Login">Book Now</a>
                    }

                </div>
            </div>
        </div>
    </div>

