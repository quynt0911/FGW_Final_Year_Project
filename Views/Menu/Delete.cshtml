@model Blank.Models.Menu

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Menu</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
        body {
            @* padding-top: 50px; *@
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 30px;
        }
        .confirmation-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        h3 {
            color: #d9534f;
            margin-bottom: 20px;
        }
        h4 {
            color: #333;
            margin-bottom: 20px;
        }
        .row dt {
            font-weight: bold;
        }
        .btn-danger {
            margin-right: 10px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="confirmation-container">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Menu</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DishId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DishId)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RestaurantId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.RestaurantId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MenuId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

<script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
