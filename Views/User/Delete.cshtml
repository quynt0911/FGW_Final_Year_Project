@model UserViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<h1 class="text-center text-danger">Delete User</h1>

<div class="delete-container">
    <h4 class="text-warning">Are you sure you want to delete this user?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<style>
    h1.text-center {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #dc3545;
    }

    .delete-container {
        background-color: #f8d7da;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .delete-container h4 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #856404;
    }

    dl.row {
        margin: 0;
    }

    dt.col-sm-3 {
        font-weight: bold;
        color: #495057;
    }

    dd.col-sm-9 {
        margin-left: 0;
        color: #212529;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-transform: uppercase;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
