@model Blank.Models.Ingredient

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Ingredient Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngName)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngDescription)</dd>

                    <dt class="col-sm-3">Number</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Numer)</dd>

                    <td>
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <img src="~/imgs/@Model.Photo" alt="@Model.IngName" width="100" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                </dl>
            </div>

            <div class="card-footer text-end">
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.IngId">Edit</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
