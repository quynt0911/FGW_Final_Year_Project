@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<div class="hell">
    <div class="sidebar">
        <h4>Dashboard</h4>

        <div class="dropdown">
            <a asp-controller="Home" asp-action="Dash">Home</a>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-account" class="toggle-checkbox">
            <label for="toggle-account" class="dropdown-toggle">Manage Account</label>
            <div class="dropdown-content">
                <a href="/Account/Index">List of Accounts</a>
                <a href="/Account/Create">Manage Role</a>
                <a href="/Account/Create">Add New Account</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-menu" class="toggle-checkbox">
            <label for="toggle-menu" class="dropdown-toggle">Manage Menu</label>
            <div class="dropdown-content">
                <a asp-controller="Menu" asp-action="Index">View Menu</a>
                <a asp-controller="Menu" asp-action="Create">Add New Menu</a>
                <a href="/Menu/Create">Manage Menu Item</a>
                <a href="/Menu/Create">Special Offers</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-table" class="toggle-checkbox">
            <label for="toggle-table" class="dropdown-toggle">Manage Tables</label>
            <div class="dropdown-content">
                <a asp-controller="Table" asp-action="Index">List of Tables</a>
                <a asp-controller="Table" asp-action="Create">Add New Table</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-ingredient" class="toggle-checkbox">
            <label for="toggle-ingredient" class="dropdown-toggle">Manage Ingredients</label>
            <div class="dropdown-content">
                <a asp-controller="Ingredient" asp-action="Index">View Ingredient</a>
                <a asp-controller="Ingredient" asp-action="Create">Add New Ingredient</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-task" class="toggle-checkbox">
            <label for="toggle-task" class="dropdown-toggle">Manage Tasks</label>
            <div class="dropdown-content">
                <a asp-controller="Task" asp-action="Index">View Tasks</a>
                <a asp-controller="Task" asp-action="#">Assign Task</a>
            </div>
        </div>

        @* <div class="dropdown">
            <input type="checkbox" id="toggle-dish" class="toggle-checkbox">
            <label for="toggle-dish" class="dropdown-toggle">Manage Dishes</label>
            <div class="dropdown-content">
                <a asp-controller="Dish" asp-action="Index">List of Dishes</a>
                <a asp-controller="Dish" asp-action="Create">Add New Dish</a>
            </div>
        </div> *@

        <div class="dropdown">
            <input type="checkbox" id="toggle-order" class="toggle-checkbox">
            <label for="toggle-order" class="dropdown-toggle">Manage Orders</label>
            <div class="dropdown-content">
                <a asp-controller="Order" asp-action="Index">List of Orders</a>
                <a asp-controller="Order" asp-action="Create">Create New Order</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-recipe" class="toggle-checkbox">
            <label for="toggle-recipe" class="dropdown-toggle">Manage Recipes</label>
            <div class="dropdown-content">
                <a asp-controller="Recipe" asp-action="Index">View Recipes</a>
                <a asp-controller="Recipe" asp-action="Create">Add New Recipe</a>
            </div>
        </div>

        <div class="dropdown">
            <input type="checkbox" id="toggle-report" class="toggle-checkbox">
            <label for="toggle-report" class="dropdown-toggle">Reports</label>
            <div class="dropdown-content">
                <a asp-controller="Report" asp-action="Index">View Reports</a>
                <a asp-controller="Report" asp-action="Create">Make a Report</a>
                <a asp-controller="Report" asp-action="Statistic">Statistics</a>
            </div>
        </div>


        <a href="/Home/Logout">Logout</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    <footer>
        &copy; 2024 Your Company
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</div>

<style>
    .hell {
        display: flex;
        min-height: 100vh;
        font-family: Arial, sans-serif;
        background-color: #f8f4f0;
    }

    .toggle-checkbox {
        display: none;
    }

    .dropdown-content {
        display: none;
        background-color: #ffffff;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        position: relative;
        padding: 10px 0;
        border-radius: 8px;
        text-align: center;
    }

    .dropdown-content a {
        color: #333333;
        padding: 12px 20px;
        text-decoration: none;
        display: block;
        border-bottom: 1px solid #dddddd;
        margin: 5px auto;
        width: 90%;
        background-color: #f0ebe7;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .dropdown-content a:hover {
        background-color: #e1d8d0;
        color: #8b572a;
    }

    .toggle-checkbox:checked + .dropdown-toggle + .dropdown-content {
        display: block;
    }

    .dropdown-toggle {
        display: block;
        padding: 15px 20px;
        text-decoration: none;
        color: #ffffff;
        background-color: #8b572a;
        margin-bottom: 10px;
        text-align: center;
        border-radius: 8px;
        transition: background-color 0.3s;
        cursor: pointer;
        border: 1px solid #704522;
    }

    .dropdown-toggle:hover {
        background-color: #a67b4f;
    }

    .sidebar {
        width: 250px;
        background-color: #8b572a;
        color: #ffffff;
        padding-top: 20px;
        flex-shrink: 0;
        position: fixed;
        height: 100%;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .sidebar h4 {
        text-align: center;
        margin-bottom: 20px;
        color: #ffffff;
    }

    .sidebar a {
        color: #ffffff;
        padding: 15px 20px;
        background-color: #704522;
        display: block;
        text-decoration: none;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 10px;
        transition: background-color 0.3s;
        border: 1px solid #5d3b1d;
    }

    .sidebar a:hover {
        background-color: #a67b4f;
    }

    .content {
        margin-left: 250px;
        flex-grow: 1;
        padding: 20px;
        background-color: #ffffff;
    }

    .form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 500px;
        margin: 0 auto;
        margin-top: 50px;
    }

    .form-container h2 {
        background-color: #8b572a;
        color: #ffffff;
        padding: 10px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #dddddd;
        border-radius: 5px;
    }

    .form-container button {
        background-color: #8b572a;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .form-container button:hover {
        background-color: #a67b4f;
    }

    .form-container .back-btn {
        background-color: #777777;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

    footer {
        text-align: center;
        padding: 20px;
        background-color: #8b572a;
        color: #ffffff;
        position: fixed;
        bottom: 0;
        width: calc(100% - 250px);
        margin-left: 250px;
    }
</style>