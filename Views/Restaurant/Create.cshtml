@model Blank.Models.Restaurant

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<div class="container">
    <h2>Add New Restaurant Branch</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ResName" class="control-label"></label>
            <input asp-for="ResName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhotoFile" class="control-label">Upload Photo</label>
            <input type="file" asp-for="PhotoFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>

<style>
    body {
        background-color: #ffffff;
        color: #000000;
    }

    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px auto;
    }

    h2 {
        text-align: center;
        color: #000000;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-group label {
        color: #000000;
        font-weight: bold;
    }

    .form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #cccccc;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #0056b3;
        color: #ffffff;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
        color: #ffffff;
    }
</style>
