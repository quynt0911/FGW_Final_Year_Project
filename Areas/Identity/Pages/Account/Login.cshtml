@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">Welcome Back!</h3>
                    <p class="mb-0">Login to access your account</p>
                </div>

                <div class="card-body p-5 bg-card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.Email" class="form-control rounded-right shadow-sm"
                                    placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Password" class="form-label font-weight-bold">Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.Password" class="form-control rounded-right shadow-sm"
                                    placeholder="Enter your password" type="password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label font-weight-bold">Remember
                                Me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit"
                                class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-sign-in-alt mr-2"></i>Log in
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-gradient">Forgot your
                                password?</a>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                class="text-gradient">Register as a new user</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .bg-card-body {
        background: #2c2c2c;
        color: #e0e0e0;
        border-radius: 10px;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }

    .bg-gradient-icon {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .text-gradient {
        color: #ffa500;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
    }

    .text-gradient:hover {
        color: #ffd700;
    }

    .font-weight-bold {
        text-shadow: 1px 1px 2px #4b2e2e;
    }

    @@media (max-width: 768px) {
        .btn-gradient-primary {
            font-size: 0.9rem;
            padding: 10px 20px;
        }

        .font-weight-bold {
            font-size: 1.8rem;
        }
    }
</style>
