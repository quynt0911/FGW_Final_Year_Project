@model Blank.Models.Dish
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

@if (Model != null)
{
    <h2>Delete Dish</h2>

    <div>
        <dl class="row">
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" alt="@Model.DishName" style="width: 150px; height: auto; border-radius: 8px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.DishName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.DDescription</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DishId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">
        Error: No dish found. Please go back to the list.
    </div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
}

<style>
    body {
        background-color: #ffffff;
        color: #000000;
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: left;
        font-weight: bold;
        color: #4b2e2e;
        margin-bottom: 20px;
        padding-left: 10px;
    }

    dl {
        width: 80%;
        margin: 0 auto;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    dl dt {
        font-weight: bold;
        color: #4b2e2e;
        width: 30%;
        display: inline-block;
        vertical-align: top;
        margin-bottom: 10px;
    }

    dl dd {
        margin-left: 0;
        display: inline-block;
        vertical-align: top;
        width: 65%;
        margin-bottom: 10px;
        color: #555555;
    }

    img {
        max-width: 150px;
        height: auto;
        border-radius: 8px;
        display: block;
        margin-top: 10px;
    }

    .btn-container {
        text-align: left;
        padding-left: 10px;
        margin-top: 20px;
    }

    .btn-secondary {
        background-color: #4b2e2e;
        border-color: #4b2e2e;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #6b4e4e;
        border-color: #6b4e4e;
        color: #fff;
    }
</style>
