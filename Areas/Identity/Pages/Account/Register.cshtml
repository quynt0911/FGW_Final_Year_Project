<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .bg-card-body {
        background: #2c2c2c;
        color: #e0e0e0;
        border-radius: 10px;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }

    .bg-gradient-icon {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .font-weight-bold {
        text-shadow: 1px 1px 2px #4b2e2e;
    }

    @@media (max-width: 768px) {
        .btn-gradient-primary {
            font-size: 0.9rem;
            padding: 10px 20px;
        }

        .font-weight-bold {
            font-size: 1.8rem;
        }
    }
</style>

