@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<header class="bg-gradient-primary text-white text-center py-4">
    <h1 class="font-weight-bold">Are You Sure To Logout!?</h1>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 30vh;">
        <div class="d-flex gap-4">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline" asp-controller="Home" asp-action="Index">
                    <button type="submit" class="btn btn-gradient-back btn-lg rounded-pill shadow-sm">
                        <i class="fas fa-arrow-left mr-2"></i>Back
                    </button>
                </form>

                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
                </form>
            }
            else
            {
                <p class="mt-4 text-light">You have successfully logged out of the application.</p>
            }
        </div>
    </div>
</header>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffd700 50%, #ffa500 100%);
        color: #ffd700;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }

    .btn-gradient-back {
        background: linear-gradient(90deg, #ff4500 0%, #ffa500 50%, #ff6347 100%);
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-gradient-back:hover {
        background: linear-gradient(90deg, #ffa500 0%, #ff4500 50%, #ff6347 100%);
        color: #4b2e2e;
    }

    .font-weight-bold {
        font-size: 2.5rem;
        color: #ffd700;
        text-shadow: 2px 2px 4px #4b2e2e;
    }

    @@media (max-width: 768px) {

        .btn-gradient-primary,
        .btn-gradient-back {
            font-size: 0.9rem;
            padding: 10px 20px;
        }

        .font-weight-bold {
            font-size: 1.8rem;
        }
    }
</style>


