@model Blank.Models.Dish

<h2>Dish Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.DishName</h5>
        <p class="card-text">@Model.DDescription</p>
        <p class="card-text"><strong>Price: </strong>@Model.Price.ToString("C")</p>
    </div>
</div>

<a asp-action="Menu" class="btn btn-secondary">Back to Menu</a>
