@model Blank.Models.Recipe

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Recipe Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Recipe Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.RecipeName)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ReDescription)</dd>
                </dl>
            </div>

            <div class="card-footer text-end">
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.RecipeId">Edit</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
