@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend Confirmation Email";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">Resend Confirmation Email</h3>
                    <p class="mb-0">Enter your email to resend the confirmation link</p>
                </div>

                <div class="card-body p-5 bg-card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.Email" class="form-control rounded-right shadow-sm"
                                       placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-envelope mr-2"></i>Resend Email
                            </button>
                        </div>

                        @if (TempData["Message"] != null)
                        {
                            <p class="text-success mt-3">@TempData["Message"]</p>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .bg-card-body {
        background: #2c2c2c;
        color: #e0e0e0;
        border-radius: 10px;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }

    .bg-gradient-icon {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .font-weight-bold {
        text-shadow: 1px 1px 2px #4b2e2e;
    }
</style>
