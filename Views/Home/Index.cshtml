@{
    ViewData["Title"] = "Restaurant Booking Home";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<body>
    <div class="top-search">
        <div class="container">
            <div class="input-group search-box">
                <span class="input-group-addon search-icon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control search-input" placeholder="Search...">
                <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
            </div>
        </div>
    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/banner-01.jpg" class="d-block w-100 banner-img" alt="First Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to Restaurant Booking</h5>
                    <p>Reserve your table or enjoy delicious food delivered to your home!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-02.jpg" class="d-block w-100 banner-img" alt="Second Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Experience the Best Dining in Town</h5>
                    <p>Our chefs prepare each dish with love and care.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-03.jpg" class="d-block w-100 banner-img" alt="Third Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Discover New Tastes</h5>
                    <p>Book your table today and explore our seasonal menus.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/banner-04.jpg" class="d-block w-100 banner-img" alt="Fourth Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Discover New Tastes</h5>
                    <p>Book your table today and explore our seasonal menus.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="categories-shop">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/book_table.jpg" alt="Book Table" />
                        <a class="custom-btn" href="#book-table">Book a Table</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/order_food.jpg" alt="Order Food" />
                        <a class="custom-btn" href="#order-food">Order Food</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="images/popular_dishes.jpg" alt="Popular Dishes" />
                        <a class="custom-btn" href="#popular-dishes">Popular Dishes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="book-table" class="booking-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>Book a Table</h1>
                    <form action="/book" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Your Email" required>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control">
                                <option value="2">Table for 2</option>
                                <option value="4">Table for 4</option>
                                <option value="6">Table for 6</option>
                            </select>
                        </div>
                        <button type="submit" class="btn hvr-hover">Book Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="popular-dishes" class="products-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Popular Dishes</h1>
                        <p>Our top-rated dishes made by expert chefs.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <img src="images/dish-01.jpg" class="img-fluid" alt="Image">
                        </div>
                        <div class="why-text">
                            <h4>Grilled Steak</h4>
                            <h5>$25.99</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <img src="images/dish-02.jpg" class="img-fluid" alt="Image">
                        </div>
                        <div class="why-text">
                            <h4>Spaghetti Carbonara</h4>
                            <h5>$18.50</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <img src="images/dish-03.jpg" class="img-fluid" alt="Image">
                        </div>
                        <div class="why-text">
                            <h4>Caesar Salad</h4>
                            <h5>$12.99</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <img src="images/dish-04.jpg" class="img-fluid" alt="Image">
                        </div>
                        <div class="why-text">
                            <h4>Margherita Pizza</h4>
                            <h5>$15.99</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="latest-blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Latest News</h1>
                        <p>Get the latest updates and culinary trends from our restaurant.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="images/blog-01.jpg" alt="" />
                        </div>
                        <div class="blog-content">
                            <h3>Chef's Special Dishes</h3>
                            <p>Discover our new menu prepared with seasonal ingredients.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="images/blog-02.jpg" alt="" />
                        </div>
                        <div class="blog-content">
                            <h3>Wine Pairing Nights</h3>
                            <p>Join us for exclusive wine and food pairing experiences.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
</body>

<style>
    .banner-img {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
    }

    .top-search {
        background-color: #3e2723;
        padding: 20px 0;
        margin-bottom: 20px;
        border-bottom: 2px solid #ffa500;
    }

    .top-search .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .search-box {
        display: flex;
        align-items: center;
        border: 2px solid #ffd700;
        border-radius: 30px;
        padding: 5px 15px;
        background-color: #4b2e2e;
        max-width: 600px;
        width: 100%;
    }

    .search-icon {
        color: #ffd700;
        font-size: 18px;
        margin-right: 10px;
    }

    .search-input {
        border: none;
        outline: none;
        width: 100%;
        font-size: 16px;
        background-color: transparent;
        color: #e0e0e0;
        padding: 5px 0;
    }

    .search-input::placeholder {
        color: #ffd700;
        opacity: 0.8;
    }

    .close-search {
        color: #ffd700;
        font-size: 18px;
        margin-left: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

    .close-search:hover {
        color: #ffa500;
    }

    @@media (max-width: 768px) {
        .search-box {
            max-width: 90%;
        }

        .search-icon,
        .close-search {
            font-size: 16px;
        }

        .search-input {
            font-size: 14px;
        }
    }


    .carousel-caption {
        color: #f5f5f5;
        background: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
    }

    .carousel-caption h5 {
        font-size: 2rem;
        font-weight: bold;
        color: #ffd700;
    }

    .carousel-caption p {
        font-size: 1.2rem;
        color: #ffa500;
    }

    .btn-custom {
        background-color: #4b2e2e;
        color: #ffd700;
        border: 1px solid #ffd700;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-transform: uppercase;
    }

    .btn-custom:hover {
        background-color: #ffa500;
        color: #ffffff;
    }

    .custom-btn {
        display: inline-block;
        background-color: #4b2e2e;
        color: #ffd700;
        border: 2px solid #ffd700;
        text-transform: uppercase;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        text-align: center;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

    .custom-btn:hover {
        background-color: #ffa500;
        color: #fff;
        border-color: #ffa500;
        transform: scale(1.1);
    }

    .shop-cat-box img {
        margin-bottom: 15px;
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 5px;
    }

    .categories-shop {
        margin-top: 30px;
        margin-bottom: 50px;
    }

    @@media (max-width: 768px) {
        .shop-cat-box img {
            height: 200px;
        }
    }

    @@media (max-width: 480px) {
        .shop-cat-box img {
            height: 150px;
        }
    }

    .mt-4 {
        margin-top: 50px !important;
    }

    body {
        background-color: #2c2c2c;
        color: #e0e0e0;
    }

    .navbar {
        background-color: #4b2e2e;
    }

    .navbar a {
        color: #ffd700 !important;
    }

    .navbar a:hover {
        color: #ffa500 !important;
    }

    .footer-main {
        background-color: #4b2e2e;
        color: #ffd700;
        padding: 20px 0;
    }

    .footer-main h3 {
        color: #ffa500;
        font-size: 1.5rem;
    }

    .footer-main a {
        color: #ffd700;
    }

    .footer-main a:hover {
        color: #ffa500;
    }

    .footer-copyright {
        background-color: #2c2c2c;
        color: #e0e0e0;
        text-align: center;
        padding: 10px 0;
    }

    .booking-section {
        background-color: #3e2723;
        color: #f5f5f5;
        padding: 50px 0;
        border-radius: 10px;
    }

    .booking-section h1 {
        color: #ffd700;
    }

    .booking-section .form-control {
        border: 1px solid #ffd700;
    }

    .booking-section .form-control:focus {
        border-color: #ffa500;
        box-shadow: 0 0 5px #ffa500;
    }

    .booking-section .btn {
        background-color: #ffa500;
        color: #fff;
    }

    .booking-section .btn:hover {
        background-color: #ffd700;
    }

    .products-box {
        background-color: #2c2c2c;
        padding: 50px 0;
    }

    .products-box h1,
    .products-box p {
        color: #ffd700;
    }

    .products-box .products-single h4 {
        color: #ffa500;
    }

    .products-box .products-single h5 {
        color: #ffd700;
    }

    .latest-blog {
        background-color: #3e2723;
        padding: 50px 0;
        color: #f5f5f5;
    }

    .latest-blog h1 {
        color: #ffd700;
    }

    .latest-blog p {
        color: #ffa500;
    }
</style>
