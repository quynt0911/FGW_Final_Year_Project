@page
@model ConfirmedModel
@{
    ViewData["Title"] = "Confirm Email";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">Confirm Your Email</h3>
                    <p class="mb-0">Click the button below to confirm your email address.</p>
                </div>
                <div class="card-body p-5 bg-card-body">
                    <form method="post">
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <input type="hidden" name="code" value="@Model.Code" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                                Confirm Email
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .bg-card-body {
        background: #2c2c2c;
        color: #e0e0e0;
        border-radius: 10px;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }
</style>
