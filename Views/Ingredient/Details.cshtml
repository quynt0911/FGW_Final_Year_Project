@model Blank.Models.Ingredient

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Ingredient Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngName)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngDescription)</dd>

                    <dt class="col-sm-3">Number</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Numer)</dd>

                    <dt class="col-sm-3">Image</dt>
                    <dt class="col-sm-3">Image</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                        {
                            <img src="@Model.PhotoUrl" alt="@Model.IngName"
                                style="width: 150px; height: auto; border-radius: 8px;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </dd>

                </dl>
            </div>

            <div class="card-footer text-end">
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.IngId">Edit</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
