

@model Blank.Models.Dish
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<div>
    <h2>Dish Details</h2>
    <dl>
        <dt>Image</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" alt="@Model.DishName" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
        <dt>@Html.DisplayNameFor(model => model.DishName)</dt>
        <dd>@Html.DisplayFor(model => model.DishName)</dd>
        <dt>@Html.DisplayNameFor(model => model.DDescription)</dt>
        <dd>@Html.DisplayFor(model => model.DDescription)</dd>
        <dt>@Html.DisplayNameFor(model => model.Price)</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>
    </dl>
    <div class="btn-container">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #ffffff;
        color: #000000;
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: left;
        font-weight: bold;
        color: #4b2e2e;
        margin-bottom: 20px;
        padding-left: 10px;
    }

    dl {
        width: 80%;
        margin: 0 auto;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    dl dt {
        font-weight: bold;
        color: #4b2e2e;
        width: 30%;
        display: inline-block;
        vertical-align: top;
        margin-bottom: 10px;
    }

    dl dd {
        margin-left: 0;
        display: inline-block;
        vertical-align: top;
        width: 65%;
        margin-bottom: 10px;
        color: #555555;
    }

    img {
        max-width: 150px;
        height: auto;
        border-radius: 8px;
        display: block;
        margin-top: 10px;
    }

    .btn-container {
        text-align: left;
        padding-left: 10px;
        margin-top: 20px;
    }

    .btn-secondary {
        background-color: #4b2e2e;
        border-color: #4b2e2e;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #6b4e4e;
        border-color: #6b4e4e;
        color: #fff;
    }
</style>