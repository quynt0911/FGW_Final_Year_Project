@* @model RegisterViewModel
@{
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">Create Your Account</h3>
                    <p class="mb-0">Please fill in the details to register</p>
                </div>
                
                <div class="card-body p-5">
                    <form asp-action="Register" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="UserName" class="form-label font-weight-bold">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white rounded-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <input asp-for="UserName" class="form-control rounded-right shadow-sm" placeholder="Enter your username" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white rounded-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                                <input asp-for="Email" class="form-control rounded-right shadow-sm" placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PhoneNumber" class="form-label font-weight-bold">Phone Number</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white rounded-left">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                </div>
                                <input asp-for="PhoneNumber" class="form-control rounded-right shadow-sm" placeholder="Enter your phone number" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label font-weight-bold">Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white rounded-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Password" class="form-control rounded-right shadow-sm" placeholder="Enter your password" type="password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label font-weight-bold">Confirm Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-primary text-white rounded-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="ConfirmPassword" class="form-control rounded-right shadow-sm" placeholder="Confirm your password" type="password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-user-plus mr-2"></i>Register
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/User/Login" class="text-primary">Already have an account? Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, rgba(58,123,213,1) 0%, rgba(58,213,176,1) 100%);
    }
    .btn-gradient-primary {
        background: linear-gradient(90deg, rgba(58,123,213,1) 0%, rgba(58,213,176,1) 100%);
        color: white;
    }
    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, rgba(58,213,176,1) 0%, rgba(58,123,213,1) 100%);
        color: white;
    }
</style> *@
