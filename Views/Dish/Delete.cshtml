@model Blank.Models.Dish
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

@if (Model != null)
{
    <h2>Delete Dish</h2>

    <div>
        <dl class="row">
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" alt="@Model.DishName" style="width: 150px; height: auto; border-radius: 8px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.DishName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.DDescription</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DishId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">
        Error: No dish found. Please go back to the list.
    </div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
}
