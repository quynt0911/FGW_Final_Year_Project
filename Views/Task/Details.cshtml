@model Blank.Models.Task

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Task Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Task Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskName)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">Task Status</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskStatus)</dd>
                </dl>
            </div>

            <div class="card-footer text-end">
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.TaskId">Edit</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
