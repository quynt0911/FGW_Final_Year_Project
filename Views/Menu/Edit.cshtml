@model Blank.Models.Menu

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Menu</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" /> <!-- Assuming you're using Bootstrap -->
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 30px;
        }
        .form-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h4 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }
        .btn-primary {
            width: 100%;
        }
        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="form-container">
        <h4>Edit Menu</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MenuId" />
            
            <div class="form-group">
                <label asp-for="DishId" class="control-label"></label>
                <input asp-for="DishId" class="form-control" />
                <span asp-validation-for="DishId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label"></label>
                <input asp-for="RestaurantId" class="form-control" />
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>

<script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
