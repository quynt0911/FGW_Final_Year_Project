@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<h1 class="text-center text-danger">Delete Role</h1>

<div class="delete-container">
    <h4 class="text-warning">Are you sure you want to delete this role?</h4>
    <hr />
    <div class="role-info">
        <strong>Role Name:</strong> <span>@Model.Name</span>
    </div>

    <form asp-action="DeleteRole" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageRole" class="btn btn-secondary">Cancel</a>
    </form>


</div>

<style>
    h1.text-center {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #dc3545;
    }

    .delete-container {
        background-color: #f8d7da;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .delete-container h4 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #856404;
    }

    .role-info {
        font-size: 1.2rem;
        margin-bottom: 20px;
        color: #495057;
    }

    .role-info span {
        color: #212529;
        font-weight: bold;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-transform: uppercase;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .text-center {
        text-align: center;
    }
</style>
