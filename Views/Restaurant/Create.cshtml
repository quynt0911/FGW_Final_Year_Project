@model Blank.Models.Restaurant

@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<div class="container">
    <h2>Add New Restaurant Branch</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ResName" class="control-label"></label>
            <input asp-for="ResName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhotoFile" class="control-label">Upload Photo</label>
            <input type="file" asp-for="PhotoFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>
