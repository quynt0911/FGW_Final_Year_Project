@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-gradient-primary text-white text-center py-4">
            <h1 class="font-weight-bold">Registration Successful!</h1>
        </div>

        <div class="card-body text-center">
            <p class="mb-3">Thank you for registering!</p>
            <p>Please check your email (<strong>@Model.Email</strong>) to confirm your account.</p>

            @if (Model.DisplayConfirmAccountLink)
            {
                <p>
                    <a class="btn btn-primary btn-lg" href="@Model.EmailConfirmationUrl">Confirm your email</a>
                </p>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .card-header h1 {
        font-size: 2rem;
        text-shadow: 1px 1px 2px #4b2e2e;
    }
</style>
