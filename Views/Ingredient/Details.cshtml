@model Blank.Models.Ingredient

@{
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Ingredient Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngName)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngDescription)</dd>

                    <dt class="col-sm-3">Number</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Numer)</dd>

                    <dt class="col-sm-3">Image</dt>
                    <dt class="col-sm-3">Image</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                        {
                            <img src="@Model.PhotoUrl" alt="@Model.IngName"
                                style="width: 150px; height: auto; border-radius: 8px;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </dd>

                </dl>
            </div>

            <div class="card-footer text-end">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Chef"))
                {
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.IngId">Edit</a>
                }
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>

<style>
    body {
        font-family: Arial, sans-serif;
        color: #212529;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        padding: 10px 15px;
    }

    .card-body {
        padding: 20px;
    }

    dl.row dt {
        font-weight: bold;
        color: #495057;
    }

    dl.row dd {
        color: #212529;
    }

    img {
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .card-footer {
        padding: 15px;
        background-color: #f8f9fa;
        text-align: end;
    }

    .btn {
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
