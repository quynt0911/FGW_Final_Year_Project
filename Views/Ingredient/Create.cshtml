@model Blank.Models.Ingredient

@{
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container">
    <h2>Create Ingredient</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="IngName" class="control-label">Name</label>
            <input asp-for="IngName" class="form-control" />
            <span asp-validation-for="IngName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IngDescription" class="control-label">Description</label>
            <textarea asp-for="IngDescription" class="form-control"></textarea>
            <span asp-validation-for="IngDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Numer" class="control-label">Number</label>
            <input asp-for="Numer" class="form-control" />
            <span asp-validation-for="Numer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoFile" class="control-label">Upload Photo</label>
            <input asp-for="PhotoFile" type="file" class="form-control" />
            <span asp-validation-for="PhotoFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    /* Container */
    .container {
        background-color: #ffffff;
        /* Nền trắng */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        /* Đổ bóng nhẹ */
        max-width: 800px;
        margin: 30px auto;
        /* Canh giữa */
    }

    /* Tiêu đề */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #343a40;
        /* Màu đen đậm */
        text-align: center;
        margin-bottom: 20px;
    }

    /* Nhãn (label) */
    .control-label {
        font-weight: bold;
        color: #212529;
        /* Màu đen */
        margin-bottom: 8px;
        display: block;
        /* Canh nhãn thẳng hàng với input */
    }

    /* Input và textarea */
    .form-control {
        border: 1px solid #ced4da;
        /* Viền xám nhạt */
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        color: #212529;
        /* Chữ đen */
        background-color: #fff;
        /* Nền trắng */
    }

    .form-control::placeholder {
        color: #6c757d;
        /* Màu placeholder */
    }

    .form-control:focus {
        border-color: #80bdff;
        /* Viền xanh nhạt khi focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
    }

    /* Textarea */
    textarea.form-control {
        resize: none;
        /* Không cho resize */
    }

    /* Nút hành động */
    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-transform: uppercase;
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        /* Màu xanh lam */
        color: #fff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        /* Xanh đậm hơn khi hover */
    }

    .btn-secondary {
        background-color: #6c757d;
        /* Màu xám */
        color: #fff;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Văn bản lỗi */
    .text-danger {
        color: #dc3545;
        /* Màu đỏ */
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Footer */
    .card-footer {
        margin-top: 20px;
    }
</style>
