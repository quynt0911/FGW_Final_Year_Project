@model IEnumerable<Blank.Models.Dish>
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<h2 class="text-center mb-4">Dish List</h2>

<div class="container">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Dish</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th>Image</th>
                    <th>Name of the Dish</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.PhotoUrl))
                            {
                                <img src="@item.PhotoUrl" alt="@item.DishName"
                                    class="rounded border border-secondary" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.DishName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DDescription)</td>
                        <td class="text-end">@Html.DisplayFor(modelItem => item.Price)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.DishId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.DishId" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.DishId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    h2.text-center {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }
</style>
