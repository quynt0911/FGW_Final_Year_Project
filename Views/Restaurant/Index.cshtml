@model IEnumerable<Blank.Models.Restaurant>
@{
    Layout = "~/Views/Shared/AdminLO.cshtml";
}

<div class="container">
    <h2>Restaurant Branches</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Branch</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl" alt="@item.ResName photo"
                                style="width: 150px; height: auto; border-radius: 5px;" />
                        }
                        else
                        {
                            <p>No photo available</p>
                        }
                    </td>

                    <td>@item.ResName</td>
                    <td>@item.Location</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RestaurantId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.RestaurantId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        background-color: #ffffff; 
        color: #000000; 
    }

    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        max-width: 600px;
        margin: 20px auto;
    }

    h2 {
        text-align: center;
        color: #000000; 
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-group label {
        color: #000000; 
        font-weight: bold;
    }

    .form-control {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #cccccc; 
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #0056b3;
        color: #ffffff; 
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #0056b3; 
        border-color: #004085;
        color: #ffffff;
    }
</style>
