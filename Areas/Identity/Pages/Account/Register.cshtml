@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/UserLO.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0 font-weight-bold">Create Your Account</h3>
                    <p class="mb-0">Please fill in the details to register</p>
                </div>

                <div class="card-body p-5 bg-card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                        enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.FullName" class="form-label font-weight-bold">Full Name</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.FullName" class="form-control rounded-right shadow-sm"
                                    placeholder="Enter your full name" />
                            </div>
                            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.Email" class="form-control rounded-right shadow-sm"
                                    placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.PhoneNumber" class="form-label font-weight-bold">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control rounded-right shadow-sm"
                                placeholder="Enter your phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Password" class="form-label font-weight-bold">Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.Password" class="form-control rounded-right shadow-sm"
                                    placeholder="Enter your password" type="password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label font-weight-bold">Confirm
                                Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Input.ConfirmPassword" class="form-control rounded-right shadow-sm"
                                    placeholder="Confirm your password" type="password" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label font-weight-bold">Profile Image (Optional)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-gradient-icon text-white rounded-left">
                                        <i class="fas fa-image"></i>
                                    </span>
                                </div>
                                <input type="file" name="ProfileImage" class="form-control rounded-right shadow-sm" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="registerSubmit" type="submit"
                                class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-user-plus mr-2"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .bg-card-body {
        background: #2c2c2c;
        color: #e0e0e0;
        border-radius: 10px;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #ffa500 0%, #ffd700 100%);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #ffd700 0%, #ffa500 100%);
        color: #4b2e2e;
    }

    .bg-gradient-icon {
        background: linear-gradient(90deg, #4b2e2e 0%, #ffa500 50%, #ffd700 100%);
    }

    .font-weight-bold {
        text-shadow: 1px 1px 2px #4b2e2e;
    }

    @@media (max-width: 768px) {
        .btn-gradient-primary {
            font-size: 0.9rem;
            padding: 10px 20px;
        }

        .font-weight-bold {
            font-size: 1.8rem;
        }
    }
</style>
