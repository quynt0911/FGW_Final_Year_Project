@model Blank.Models.Dish

<h2>Add Dish to Order</h2>

<form asp-action="AddToOrder" method="post">
    <input type="hidden" asp-for="DishId" />

    <div class="form-group">
        <label asp-for="DishName" class="control-label"></label>
        <input asp-for="DishName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="tableId">Table</label>
        <select id="tableId" name="tableId" class="form-control" asp-items="@(ViewData["TableList"] as SelectList)"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add to Order</button>
    <a asp-action="Menu" class="btn btn-secondary">Cancel</a>
</form>
